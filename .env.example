# 翻译 API
OPENAI_API_KEY=your_openai_key_here
DEEPL_API_KEY=your_deepl_key_here

# 百度翻译 API（免费额度：https://fanyi-api.baidu.com/）
BAIDU_APP_ID=your_baidu_app_id_here
BAIDU_SECRET_KEY=your_baidu_secret_key_here

# 微软翻译 API（免费额度：https://azure.microsoft.com/zh-cn/services/cognitive-services/translator/）
MICROSOFT_TRANSLATOR_KEY=your_microsoft_translator_key_here
MICROSOFT_TRANSLATOR_REGION=global

# 新闻验证 API（用于事实核查）
OPENAI_MODEL=gpt-4
CLAUDE_API_KEY=your_claude_key_here

# 数据库
DATABASE_PATH=./data/news.db
REDIS_URL=redis://localhost:6379

# 抓取配置
FETCH_INTERVAL=6h
MAX_NEWS_PER_SOURCE=20
NEWS_RETENTION_DAYS=30
USER_AGENT=NewsAggregator/1.0 (+https://github.com/yourname/news)

# 验证配置
ENABLE_CREDIBILITY_CHECK=true
ENABLE_FACT_CHECK=true
MIN_CREDIBILITY_THRESHOLD=0.5
CROSS_REF_SEARCH_ENABLED=true

# Reddit API (可选)
REDDIT_CLIENT_ID=your_client_id
REDDIT_CLIENT_SECRET=your_client_secret
REDDIT_USER_AGENT=NewsAggregator/1.0

# 代理配置（如需要）
HTTP_PROXY=
HTTPS_PROXY=

# 日志级别 (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
